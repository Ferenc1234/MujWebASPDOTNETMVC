@{
    ViewData["Title"] = "Show from database";
}
@model List<Uzivatel>

<div class="text-center container">
    <h1 class="display-4">Zobrazení z databáze</h1>

    <p class="lead pb-4 pt-2">Zde je seznam všech záznamů z databáze.</p>
</div>

<div class="container border-2 rounded bg-light d-flex flex-column">
    <div class="py-2 px-0 justify-content-end d-flex justify-content-end">
        <a asp-controller="Database" asp-action="CreateUzivatel" class="btn btn-success bg-green mx-2 p-2 active">
            <i class="bi bi-plus"></i> Vytvořit nového uživatele
        </a>
    </div>
    <div class="table-responsive">
        <table class="p-3 table table-light table-hover table-bordered align-content-left">
            <thead>
                <tr>
                    <th class="w-25 text-nowrap">ID</th>
                    <th class="w-25 text-nowrap">Jméno</th>
                    <th class="w-25 text-nowrap">Datum registrace</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.DateOfRegistration</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="text-center">
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>
                            <div class="btn-group mx-auto" role="group">
                                <a class="btn btn-sm btn-secondary mx-auto disabled text-dark">
                                    <i class="bi bi-pencil-square"></i><br /> Upravit
                                </a>
                                <a class="btn btn-sm btn-secondary mx-auto disabled text-dark">
                                    <i class="bi bi-trash-fill"></i><br /> Smazat
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
